{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "lib",
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": false,
    "sourceMap": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "lib": [
      "es2016"
    ]
  },
  "exclude": [
    "../node_modules",
    "dist",
    "coverage-output"
  ]
}
