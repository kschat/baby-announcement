{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "outDir": "dist",
    "rootDir": "lib",
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": false,
    "sourceMap": true,
    "allowJs": false,
    "resolveJsonModule": false,
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": ["lib/client"]
}
