<div class="container align-self-center">
  <div class="row">
    <div class="col">
      <form>
        <div class="form-group">
          <h4 class="text-center">Create a Quiz</h4>
        </div>

        <div class="form-group">
          <input type="text" class="form-control" id="nickname-input" placeholder="Nickname"
            aria-describedby="nickname-help">

          <small id="nickname-help" class="form-text text-muted pt-1">
            Doesn't have to be your real name, go wild!
          </small>
        </div>

        <div class="form-row">
          <div class="col">
            <a href="/" class="btn btn-link text-info pl-0">Join a quiz</a>
          </div>

          <div class="col text-right">
            <button type="submit" class="btn btn-info">Create</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>